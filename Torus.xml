<?xml version="1.0" ?>
<project name="NonPhotorealistic" width="512" height="512">
	<assets>
		
		<attributes>
			<attribute type="RENDERER" name="LineColor" data="VEC4" x="0.0" y="0.0" z="0.0" w="1.0"/>
			<attribute type="RENDERER" name="EdgeOverhangLength" data="FLOAT" value="0.0"/>
			<attribute type="RENDERER" name="EdgeWidth" data="FLOAT" value="0.02"/>
			<attribute type="RENDERER" name="NoiseAmp" data="FLOAT" value="0.02"/>
		</attributes>

		<scenes>
			<scene name="Model" param="USE_ADJACENCY UNITIZE SWAP_YZ">
				<file name="models/Torus.3ds"/>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport"/>
				<POSITION x=-1.914014 y=0.492289 z=1.460414 />
				<VIEW x=0.810088 y=-0.208939 z=-0.547815 />
				<UP x=0 y=1 z=0 />
				<NEAR value=0.1 />
				<FAR value=100 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x=2 y=-1 z=-2 />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="NonPhotorealistic.mlib" />
		</materialLibs>
	</assets>
	
	<pipelines default="Silhouette">
		<pipeline name="Silhouette" defaultCamera="MainCamera">
			<pass class="default" name="gBuffer">

				<scenes>
					<scene name="Model" />
				</scenes>

				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" 
						toMaterial="gBuffer" toLibrary="NonPhotorealistic" />
				</materialMaps>
				<viewport name="MainViewport" />
				<renderTarget name="gBuffer" fromLibrary="NonPhotorealistic"/>
			</pass>
			<pass class="quad" name="shading">
				<viewport name="MainViewport" />
				<material name="shading" fromLibrary="NonPhotorealistic" />
				<renderTarget name="color" fromLibrary="NonPhotorealistic"/>
			</pass>
			<pass class="default" name="silhouette">
				<COLOR_CLEAR value="false" />

				<scenes>
					<scene name="Model" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" 
						toMaterial="silhouette" toLibrary="NonPhotorealistic" />
				</materialMaps>
				<viewport name="MainViewport" />
				<renderTarget name="color" fromLibrary="NonPhotorealistic"/>
			</pass>
			<pass class="quad" name="distortion">
				<viewport name="MainViewport" />
				<material name="distortion" fromLibrary="NonPhotorealistic" />
			</pass>

		</pipeline>
	</pipelines>

	<interface>
        <window label="settings">
			<var label="Line color" type="RENDERER" context="CURRENT" component="LineColor" mode="COLOR" />
			<var label="Edge Overhang Length" type="RENDERER" context="CURRENT" component="EdgeOverhangLength" def="min=0 max=0.5"/>
			<var label="Edge Width" type="RENDERER" context="CURRENT" component="EdgeWidth" def="min=0 max=0.1"/>
			<var label="Distortion" type="RENDERER" context="CURRENT" component="NoiseAmp" def="min=0.01 max=0.06"/>
         </window>
    </interface>
</project>